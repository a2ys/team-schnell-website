---
import "../styles/globals.css";
import Navbar from "../components/Navbar";
import Footer from "../components/Footer.astro";
import { AOSInit } from "../scripts/AOSInit";
---

<html lang="en">
  <head>
    <meta charset="utf-8" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <meta name="viewport" content="width=device-width" />
    <meta name="generator" content={Astro.generator} />
    <link rel="preconnect" href="https://fonts.googleapis.com" />
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
    <link
      href="https://fonts.googleapis.com/css2?family=Instrument+Sans:ital,wght@0,400..700;1,400..700&family=Inter:ital,opsz,wght@0,14..32,100..900;1,14..32,100..900&display=swap"
      rel="stylesheet"
    />
    <title>Astro</title>
  </head>
  <body class="flex flex-col min-h-screen bg-gray-100">
    <Navbar client:load />
    <AOSInit client:only="react" />
    <div class="flex-grow">
      <slot />
    </div>
    <Footer />
  </body>
</html>
